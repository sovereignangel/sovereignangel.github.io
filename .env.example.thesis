# Thesis Engine - Environment Variables Template
# Copy this to .env.local and fill in your values

# ============================================================================
# DATABASE (Supabase)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# CRON JOB SECURITY
# ============================================================================
CRON_SECRET=your-random-secret-string-here

# ============================================================================
# GARMIN CONNECT API
# ============================================================================
GARMIN_EMAIL=your-garmin-email@example.com
GARMIN_PASSWORD=your-garmin-password

# ============================================================================
# GOOGLE CALENDAR API
# ============================================================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback
GOOGLE_REFRESH_TOKEN=your-refresh-token-from-oauth-flow

# ============================================================================
# CHESS.COM API
# ============================================================================
CHESS_COM_USERNAME=your-chess-username

# ============================================================================
# STRIPE API
# ============================================================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# ============================================================================
# GITHUB API
# ============================================================================
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_USERNAME=your-github-username

# ============================================================================
# GROQ API (Free - for LLM intelligence)
# ============================================================================
GROQ_API_KEY=gsk_your-groq-api-key

# ============================================================================
# WAVE.AI INTEGRATION (Optional - for voice input)
# ============================================================================
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token
WAVE_AI_FOLDER_PATH=/Apps/Wave/transcripts

# ============================================================================
# FUTURE UPGRADES (When revenue hits milestones)
# ============================================================================
# TOGETHER_API_KEY=your-together-ai-key  # Add at $6k/month MRR
# ANTHROPIC_API_KEY=your-claude-key      # Add at $10k/month MRR
